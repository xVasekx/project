<VirtualHost *:80>
  ServerName {{ domain }}
  DocumentRoot {{wpdirectory}}/wordpress
  <Directory {{wpdirectory}}/wordpress>
    AllowOverride All
    Options FollowSymLinks
    Require all granted
  </Directory>
  ErrorLog ${APACHE_LOG_DIR}/error.log
  CustomLog ${APACHE_LOG_DIR}/access.log combined
</VirtualHost>
